<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>

    <session-factory>
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://localhost:5432/hibernate_test</property>
        <property name="connection.username">postgres</property>
        <property name="connection.password">root</property>

        <property name="dialect">org.hibernate.dialect.PostgreSQL82Dialect</property>

        <!--<property name="cache.provider_class">org.hibernate.cache.EhCacheProvider</property>-->

        <property name="hibernate.show_sql">true</property>

        <property name="hbm2ddl.auto">update</property>

        <mapping class="com.mnikiforov.hibernate.dto.a_embedding_objects.UserEmbeddedAddress"/>
        <mapping class="com.mnikiforov.hibernate.dto.b_collections.UserWithCollection"/>
        <mapping class="com.mnikiforov.hibernate.dto.c_one_to_one.UserWithOneToOne"/>
        <mapping class="com.mnikiforov.hibernate.dto.d_one_to_many.UserWithOneToMany"/>
        <mapping class="com.mnikiforov.hibernate.dto.common.Vehicle"/>
        <mapping class="com.mnikiforov.hibernate.dto.e_many_to_many.UserWithManyToMany"/>
        <mapping class="com.mnikiforov.hibernate.dto.e_many_to_many.Girl"/>
        <mapping class="com.mnikiforov.hibernate.dto.f_inheritance.Animal"/>
        <mapping class="com.mnikiforov.hibernate.dto.f_inheritance.Cat"/>
        <mapping class="com.mnikiforov.hibernate.dto.f_inheritance.Dog"/>
        <mapping class="com.mnikiforov.hibernate.dto.g_crud.Product"/>
    </session-factory>

</hibernate-configuration>